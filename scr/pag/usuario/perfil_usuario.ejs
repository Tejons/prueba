                                          <div id="cont_btn_editar_factura">
                                             <i id="btn_editar_datos_facturacion" class="icon-edit btn btn_update"></i>
                                          </div>
                                     <%}%>
                                 </div>
                             </div>     
                          </div>
                      </div>
                   </div>
                   <div id="cont_btn_facturar">
                       <button type="button" id="btn_facturar" class="btn btn_accept">Facturar</button>
                   </div>
