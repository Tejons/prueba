                                 <input type="email" id="txt_correo_factura" name="txt_correo_factura" value="<%=user.correo%>"required  class="txt_panel" >
                             </div>
                          </div>
                          </div>
                          <div id="cont_informacion_factura">
                          <div class="cont_titulo">
                              <span>Direccion de facturación</span>
                          </div>
                          <div class="cont_lbl_txt">
