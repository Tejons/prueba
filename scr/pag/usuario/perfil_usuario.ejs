                                           <span>Agregar mas dispositivos</span>
                                           <div>
                                               <span class="borde">N°</span> <i id="suscrpcion_mas" class="icon-plus"></i> <i id="suscrpcion_menos" class="icon-minus"></i>
                                                <span id="igual">total =</span>
                                           </div>
                                        </div>--> 
                                     </div>
                                 <!--<div>
                                         
                                     </div>
                                     <div id="cont_btn_suscripcion">
                                         <button class="btn btn_update">Solicitar</button>
                                     </div>-->
                                 </div>
                             </div>
                             <div id="cont_facturacion">
                                 <div class="cont_titulo">
                                     <span>Información de facturación</span>
                                 </div>
                                 <div>
                                     <div class="mg-t-5">
                                         <strong>Nombre de la empresa: <%if(datosfactura.length > 0){%>
                                                                           <%=datosfactura[0].nombre_compania %>
                                                                       <%}%></strong>
                                         <br>
